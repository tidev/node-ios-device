{
  "compilerOptions": {
    "allowJs": true,
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./dist",
    "preserveWatchOutput": true,
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": false,
    "target": "esnext",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "include": ["./rollup.config.ts", "./rollup.dts.config.ts", "./src", "./scripts", "./test"]
}